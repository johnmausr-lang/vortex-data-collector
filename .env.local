# .env.local

# База данных (для примера используем PostgreSQL, который часто используется с Render.com)
# На Render.com вы получите реальную строку подключения
DATABASE_URL="postgres://user:password@host:port/database_name"

# Секретный ключ для аутентификации администратора
ADMIN_SECRET_KEY="YOUR_SUPER_SECURE_SECRET_KEY_FOR_ADMIN"

# Порт для локальной разработки
PORT=3000
